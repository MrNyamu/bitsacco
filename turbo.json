{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "public/dist/**", "build/**"],
      "dependsOn": ["^build"]
    },
    "@bitsacco/types#build": {
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["dist/**"],
      "dependsOn": []
    },
    "@bitsacco/home#build": {
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "public/dist/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "@bitsacco/types#dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": []
    },
    "@bitsacco/home#dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    }
  }
}
